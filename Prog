import numpy as np
import random


class Sudoku():

    def __init__(self):
        self.board = np.array([[0 for i in range(9)] for j in range(9)])
        self.flag = 0


    def lehetseges(self,sor,oszlop,szam):       # oszlop es sor szam lesz a felulet adott negyvzetenek neve splitelve
        for i in range(9):
            if self.board[sor][i] == szam:
                return False
        for j in range(9):
            if self.board[j][oszlop] == szam:
                return False
        kezdosor = (sor//3)*3
        kezdooszlop = (oszlop//3)*3
        for i in range(3):
            for j in range(3):
                if self.board[kezdosor+i][kezdooszlop+j] == szam:
                    return False
        return True

    def tablaGenerator(self):
        szamok = [1,2,3,4,5,6,7,8,9]
        if self.flag == 0:
            for x in range(9):
                for y in range(9):
                    if self.board[x][y] == 0:
                        random.shuffle(szamok)
                        for szam in szamok:
                            if self.lehetseges(x,y,szam):
                                self.board[x][y] = szam
                                self.tablaGenerator()
                                self.board[x][y] = 0
                        return self.board
            self.flag = 1
            print(self.board)
            

egy = Sudoku()
egy.tablaGenerator()
